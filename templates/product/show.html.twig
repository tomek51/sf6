{% extends "base.html.Twig" %}

{% block title %}
	page de
	{{ product.name }}
{% endblock %}

{% block body %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="#">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="#">{{product.category.name}}</a>
		</li>
		<li class="breadcrumb-item active">{{ product.name}}</li>
	</ol>

	<h1>{{ product.name }}({{product.price / 100}}â‚¬)</h1>

	<div class="row">
